<div
  class="w-full px-[100px] pt-[26px] mx-auto flex items-center gap-[7.90px] text-[16px] font-satoshi not-italic font-normal">

  <!-- Home link -->
  <a href="{{ '/' | relative_url }}" class="text-[#000000]">Home</a>
   <span>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path
        d="M6.53 2.47L11.53 7.47C11.6 7.54 11.66 7.62 11.69 7.71C11.73 7.8 11.75 7.9 11.75 8C11.75 8.1 11.73 8.2 11.69 8.29C11.66 8.38 11.6 8.46 11.53 8.53L6.53 13.53C6.39 13.67 6.2 13.75 6 13.75C5.8 13.75 5.61 13.67 5.47 13.53C5.33 13.39 5.25 13.2 5.25 13C5.25 12.8 5.33 12.61 5.47 12.47L9.94 8L5.47 3.53C5.33 3.39 5.25 3.2 5.25 3C5.25 2.8 5.33 2.61 5.47 2.47C5.61 2.33 5.8 2.25 6 2.25C6.2 2.25 6.39 2.33 6.53 2.47Z"
        fill="black" fill-opacity="0.6" />
    </svg>
  </span>

  {% if template contains 'collection' %}
  <a href="{{ collection.url }}" class="text-[#000000]">{{ collection.title }}</a>
  {% elsif template contains 'product' %}
  {% assign product_collections = product.collections %}
  {% if product_collections.size > 0 %}
  <a href="{{ product_collections[0].url }}" class="text-[#000000]">{{ product_collections[0].title }}</a>
  <span>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path
        d="M6.53 2.47L11.53 7.47C11.6 7.54 11.66 7.62 11.69 7.71C11.73 7.8 11.75 7.9 11.75 8C11.75 8.1 11.73 8.2 11.69 8.29C11.66 8.38 11.6 8.46 11.53 8.53L6.53 13.53C6.39 13.67 6.2 13.75 6 13.75C5.8 13.75 5.61 13.67 5.47 13.53C5.33 13.39 5.25 13.2 5.25 13C5.25 12.8 5.33 12.61 5.47 12.47L9.94 8L5.47 3.53C5.33 3.39 5.25 3.2 5.25 3C5.25 2.8 5.33 2.61 5.47 2.47C5.61 2.33 5.8 2.25 6 2.25C6.2 2.25 6.39 2.33 6.53 2.47Z"
        fill="black" fill-opacity="0.6" />
    </svg>
  </span>
  {% endif %}
  <span class="text-[rgba(0,0,0,0.6)]">{{ product.title }}</span>
  {% elsif template contains 'page' %}
  <span class="text-[rgba(0,0,0,0.6)]">{{ page.title }}</span>
  {% elsif template contains 'cart' %}
  <span class="text-[rgba(0,0,0,0.6)]">Cart</span>
  {% elsif template contains 'blog' %}
  <a href="{{ blog.url }}" class="text-[#000000]">{{ blog.title }}</a>
  <span>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path
        d="M6.53 2.47L11.53 7.47C11.6 7.54 11.66 7.62 11.69 7.71C11.73 7.8 11.75 7.9 11.75 8C11.75 8.1 11.73 8.2 11.69 8.29C11.66 8.38 11.6 8.46 11.53 8.53L6.53 13.53C6.39 13.67 6.2 13.75 6 13.75C5.8 13.75 5.61 13.67 5.47 13.53C5.33 13.39 5.25 13.2 5.25 13C5.25 12.8 5.33 12.61 5.47 12.47L9.94 8L5.47 3.53C5.33 3.39 5.25 3.2 5.25 3C5.25 2.8 5.33 2.61 5.47 2.47C5.61 2.33 5.8 2.25 6 2.25C6.2 2.25 6.39 2.33 6.53 2.47Z"
        fill="black" fill-opacity="0.6" />
    </svg>
  </span>
  <span class="text-[rgba(0,0,0,0.6)]">{{ article.title }}</span>
  {% endif %}

</div>